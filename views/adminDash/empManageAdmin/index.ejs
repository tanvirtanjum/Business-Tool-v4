<%-include('../common.ejs') -%>

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Manage Employees</title>
    <link rel="stylesheet" type="text/css" href="../assets/styles/common.css">
    <link rel="stylesheet" type="text/css" href="../assets/styles/manage.css">
</head>
<body>
    <div class="box">

        <input style="width: 20%; margin-left: 530px;" id="search" type="text" name="Search" placeholder="Search By ID" value="">
        <input id="btnSearch"type="submit" value="Search">
        <form action="post" name="manage">
            <p>Employee ID</p>
            <input type="text" name="empId" placeholder="Enter Employee Id" value="" >
            <p>Name</p>
            <input type="text" name="empName" placeholder="Enter Employee Name" value="" >
            <p>Designation</p>
            <select id="designation" name="designation">
                <option selected="" disabled="">--SELECT--</option>
                <option id="admin" value="1">Admin</option>
                <option id="manager" value="2">Manager</option>
                <option id="salesman" value="3">SalesMan</option>
                <option id="admin" value="4">DevileryMan</option>
            </select><br>
            <p>Salary</p>
            <input type="number" name="empSalary" placeholder="Enter Employee Salary" value="" >
            <p>Mobile No.</p>
            <input type="text" name="empMobileNo" placeholder="Enter Employee Mobile No" value="" >
            <p>E-mail</p>
            <input type="email" name="empEmail" placeholder="Enter Employee Email" value="" >
            <p>Join Date</p>
            <input type="text" name="empJoinDate" value="" disabled>
            <p>Added By</p>
            <input type="text" name="empAddedBy"  value="" disabled><br>
            <input style="margin-left: 400px;" type="submit" name="refresh" value="Refresh">
            <input type="submit" name="insert" value="Insert">
            <input type="submit" name="update"value="Update">
            <input type="submit" name="delete" value="Delete">
        </form>
        <div align="right" class="table">
            <table class="content-table">
                <thead>
                    <tr>
                        <th>EmpId</th>
                        <th>Name</th>
                        <th>Desig.</th>
                        <th>Salary</th>
                        <th>Mob.No.</th>
                        <th>Email</th>
                        <th>JoinDate</th>
                        <th>AddedBy</th>
                    </tr>
                </thead>

                <tbody>
                  <% for(var i=0; i < list.length; i++){ %>
                  <tr>
                    <td><%= list[i].EmpID %></td>
                    <td><%= list[i].E_NAME %></td>
                    <td><%= list[i].DID %></td>
                    <td><%= list[i].SAL %></td>
                    <td><%= list[i].E_MOB %></td>
                    <td><%= list[i].E_MAIL %></td>
                    <td><%= list[i].JOIN_DATE %></td>
                    <td><%= list[i].ADDED_BY %></td>
                  </tr>
                  <% } %>
                </tbody>
            </table>
        </div>
    </div>
</body>
</html>
