<%-include('../common.ejs') -%>

<!DOCTYPE html>
<html>
  <head>
      <meta charset="UTF-8">
      <meta name="viewport" content="width=device-width, initial-scale=1.0">
      <title>Manage Employees</title>
      <link rel="stylesheet" type="text/css" href="../assets/styles/common.css">
      <link rel="stylesheet" type="text/css" href="../assets/styles/manage.css">
  </head>

  <body>
      <div class="box">
        <form method="POST">
          <input style="width: 20%; margin-left: 530px;" id="search" type="text" name="SearchID" placeholder="Search By ID" value="">
          <input id="btnSearch" type="submit" name="SEARCH" value="Search">

          <p>Employee ID</p>
          <input type="text" name="empId" placeholder="Enter Employee Id" value="<%= sInfo.EmpID %>" >
          <p>Name</p>
          <input type="text" name="empName" placeholder="Enter Employee Name" value="<%= sInfo.name %>" >
          <p>Designation</p>
          <select id="designation" name="designation">
              <option value="0" <%if(sInfo.did==0){%>selected<%}%>>--SELECT--</option>
              <option id="admin" value="1" <%if(sInfo.did==1){%>selected<%}%>>Admin</option>
              <option id="manager" value="2" <%if(sInfo.did==2){%>selected<%}%>>Manager</option>
              <option id="salesman" value="3" <%if(sInfo.did==3){%>selected<%}%>>SalesMan</option>
              <option id="admin" value="4" <%if(sInfo.did==4){%>selected<%}%>>DevileryMan</option>
          </select><br>
          <p>Salary</p>
          <input type="number" name="empSalary" placeholder="Enter Employee Salary" value="<%= sInfo.sal %>" <%if(srchStatus==true){%>readonly<%}%> >
          <p>Mobile No.</p>
          <input type="text" name="empMobileNo" placeholder="Enter Employee Mobile No" value="<%= sInfo.mob %>" >
          <p>E-mail</p>
          <input type="email" name="empEmail" placeholder="Enter Employee Email" value="<%= sInfo.mail %>" >
          <p>Join Date</p>
          <input type="text" name="empJoinDate" value="<%= sInfo.join %>" readonly>
          <p>Added By</p>
          <input type="text" name="empAddedBy"  value="<%= sInfo.addby %>" readonly><br>
          <input style="margin-left: 400px;" type="submit" name="REFRESH" value="REFRESH">
          <input type="submit" name="INSERT" id="INSERT" value="INSERT" <%if(srchStatus==true){%>disabled<%}%>>
          <input type="submit" name="UPDATE" value="UPDATE" <%if(srchStatus==false){%>disabled<%}%>>
          <input type="submit" name="DELETE" value="DELETE" <%if(srchStatus==false){%>disabled<%}%>>
        </form>
        <div align="right" class="table">
            <table class="content-table">
                <thead>
                    <tr>
                        <th>EmpId</th>
                        <th>Name</th>
                        <th>Desig.</th>
                        <th>Salary</th>
                        <th>Mob.No.</th>
                        <th>Email</th>
                        <th>JoinDate</th>
                        <th>AddedBy</th>
                    </tr>
                </thead>

                <tbody>
                  <% for(var i=0; i < list.length; i++){ %>
                  <tr>
                    <td><%= list[i].EmpID %></td>
                    <td><%= list[i].E_NAME %></td>
                    <td><%= list[i].DID %></td>
                    <td><%= list[i].SAL %></td>
                    <td><%= list[i].E_MOB %></td>
                    <td><%= list[i].E_MAIL %></td>
                    <td><%= list[i].JOIN_DATE %></td>
                    <td><%= list[i].ADDED_BY %></td>
                  </tr>
                  <% } %>
                </tbody>
            </table>
        </div>
    </div>
  </body>
</html>
